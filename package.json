{
  "name": "node-auth",
  "version": "1.1.0",
  "description": "##It is a project to help to create an api using nodejs.",
  "main": "server.js",
  "scripts": {
    "dev": "node src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,latest",
    "babel": "./node_modules/babel-cli/bin/babel-node.js --presets latest --plugins syntax-async-functions ./src/server.js",
    "babel-node": "./node_modules/babel-cli/bin/babel-node.js ./src/server.js",
    "start": "nodemon --exec npm run babel-node",
    "test": "NODE_ENV=test mocha test --recursive --compilers js:babel-register --reporter spec",
    "t-travis": "NODE_ENV=test node_modules/.bin/babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- test/* --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js --verbose",
    "test-cover": "NODE_ENV=test node_modules/.bin/babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- test/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abdalla/node-auth.git"
  },
  "author": "Carlos Abdalla",
  "license": "MIT",
  "homepage": "https://github.com/abdalla/node-auth#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-istanbul": "^0.12.1",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "factory-girl": "^4.0.0-beta.7",
    "faker": "^3.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0",
    "mockgoose": "^6.0.8",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "hapi": "^16.0.0",
    "jsonwebtoken": "^7.1.9",
    "mongoose": "^4.7.0",
    "morgan": "^1.7.0"
  }
}
